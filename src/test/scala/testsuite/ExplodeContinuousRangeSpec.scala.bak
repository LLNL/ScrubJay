package testsuite

import scrubjay.datasource._
import scrubjay.schema._
import scrubjay.transformation.ExplodeContinuousRange


class ExplodeContinuousRangeSpec extends ScrubJaySpec {

  lazy val jobQueue: DatasetID = CSVDatasetID(jobQueueFilename, CSVSchema(jobQueueMetaFilename))
  lazy val jobQueueExplodedTime: DatasetID = ExplodeContinuousRange(jobQueue, "timespan", 60000)

  describe("Derive exploded node list") {
    it("should be defined") {
      assert(jobQueueExplodedTime.isValid)
    }
    it("should match ground truth") {
      assert(jobQueueExplodedTime.realize.collect.toSet == trueJobQueueExplodedTime)
    }
    it("should pickle/unpickle correctly") {
      assert(DatasetID.fromJsonString(DatasetID.toJsonString(jobQueueExplodedTime)) == jobQueueExplodedTime)
    }
  }
}

